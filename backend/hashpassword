require('dotenv').config();
const bcrypt = require('bcrypt');
const { Pool } = require('pg');

const SALT_ROUNDS = 10;

// Conexi√≥n a PostgreSQL usando variables de entorno
const pool = new Pool({
  user: process.env.DB_USER,
  host: process.env.DB_HOST,
  database: process.env.DB_NAME,
  password: process.env.DB_PASSWORD,
  port: process.env.DB_PORT,
});

const hashPasswords = async () => {
  try {
    const { rows } = await pool.query('SELECT id, password FROM conductores');

    for (const conductor of rows) {
      const { id, password } = conductor;

      // Saltar si ya parece hasheada
      if (!password || password.startsWith('$2b$')) {
        continue;
      }

      const hashed = await bcrypt.hash(password, SALT_ROUNDS);

      await pool.query(
        'UPDATE conductores SET password = $1 WHERE id = $2',
        [hashed, id]
      );

      console.log(`üîê Contrase√±a actualizada para conductor ID ${id}`);
    }

    console.log('‚úÖ Contrase√±as actualizadas correctamente.');
  } catch (error) {
    console.error('‚ùå Error al actualizar contrase√±as:', error);
  } finally {
    await pool.end();
  }
};

hashPasswords();
